{
  "compilerOptions": {
    //versão do ecmascript
    "target": "es2017",                          
    "module": "commonjs",                     
    //importar biblioteca do es6
    "lib": ["ES6"],                             
    //importar arquivos .js 
    "allowJs": true,                       
    //Entrada e saida dos arquivos para Build
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    //remove comentarios dos códigos na saída da build
    "removeComments": true,                
    "strict": true,                           
    //Permite importar arquivos json
    "resolveJsonModule": true,
    //pastas com os tipos
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,                  
    // Decorators
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    // Advanced Options
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  }
}
